{
  "extends": ["airbnb-base"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "no-debugger": "warn",
    "no-else-return": "off",
    "no-lonely-if": "off",
    "no-param-reassign": "off",
    "no-return-assign": "off",
    "no-unused-vars": "warn",
    "no-underscore-dangle": "off",
    "quotes": ["warn", "single"],
    "semi": "off"
  }
}
